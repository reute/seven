<prism:PrismApplication
    x:Class="SevenPrism.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SevenPrism"
    xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>

        <!--<Style x:Key="bla" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>-->

        <!--  TargetType="{x:Type TextBlock}"  -->

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Images.xaml" />
                <!--  Order of Dictionaries important, otherwise error !! https://stackoverflow.com/questions/9994020/provide-value-on-system-windows-markup-staticresourceholder-threw-an-exception  -->
                <ResourceDictionary Source="Resources/Converters.xaml" />
                <ResourceDictionary Source="Resources/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</prism:PrismApplication>
